rule all_diversity:
    input: 
        TARGET_DIVERSITY

rule move_wu:
    input:
        CORE_METRIC_DIR + "/wu/distance-matrix.tsv"
    params:
        CORE_METRIC_DIR + "/wu"
    output:
        CORE_METRIC_DIR + "/wu.tsv"
    shell:
        """
        mv {input} {output}
        rmdir {params}
        """

rule wu_convert:
    input:
        CORE_METRIC_DIR + "/weighted_unifrac_distance_matrix.qza"
    params:
        CORE_METRIC_DIR + "/wu"
    output:
        CORE_METRIC_DIR + "/wu/distance-matrix.tsv"
    shell:
        """
        qiime tools export \
        --input-path {input} \
        --output-path {params}
        """

